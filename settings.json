{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_CONFIG_DIR}/scripts/validate-command.js"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "${CLAUDE_CONFIG_DIR}/scripts/statusline-wrapper.cmd",
    "padding": 0
  }
}
